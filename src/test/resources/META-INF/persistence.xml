<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="twitter_clone">

        <class>Domain.User</class>
        <class>Domain.Comment</class>
        <class>Domain.Tweet</class>


        <properties>
            <!-- Driver for DB database -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <!-- URL for DB -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/twitter_clone_tests"/>
            <!-- jdbc:mysql://localhost/twitter_clone-->
            <!-- Username -->
            <property name="javax.persistence.jdbc.user" value="root"/>
            <!-- Password -->
            <property name="javax.persistence.jdbc.password" value="MKuJNV+3W?%wE&amp;D5"/>
            <!-- MKuJNV+3W?%wE&D5 -->
            <!-- show sql queries -->
            <property name="hibernate.show_sql" value="true"/>
            <!-- format sql queries -->
            <property name="hibernate.format_sql" value="true"/>
            <!-- update db -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- hibernate URL for DB -->
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/twitter_clone_tests"/>
            <!-- hibernate Driver for DB database -->
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
        </properties>


    </persistence-unit>
</persistence>



